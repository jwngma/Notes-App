<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:background="#000"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/single_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/main_single_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_back"
            android:paddingLeft="10dp"
            android:text="Title"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_single_desc"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/main_single_title"
            android:text="Desc is the most important part of any event,
            without description, nothing seems to be good at all" />

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/main_single_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/bg_back"
            android:layout_alignParentBottom="true"
            android:text="Updated at- 12:34:90" />
    </RelativeLayout>

</android.support.v7.widget.CardView>